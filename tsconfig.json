{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "commonJS",
    "esModuleInterop": true,
    "target": "ES2020",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
